<odoo>
    <data>

           <record model="ir.ui.view" id="track_wizard_form_view">
            <field name="name">Track Wizard</field>
            <field name="model">iti.trackwizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="description" />
                            <footer>
                            <button   name="save_track_data" type="object" string="create new track"  /> 
                            </footer>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

 
        <record model="ir.actions.act_window" id="track_wizard_action">
            <field name="name">Track Wizard</field>
            <field name="res_model">iti.trackwizard</field>
            <field name="view_mode">form</field>
        </record>
        
      
       

    </data>
</odoo>

